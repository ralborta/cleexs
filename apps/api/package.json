{
  "name": "@cleexs/api",
  "version": "1.0.0",
  "main": "./src/index.ts",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "prebuild": "npm --workspace=@cleexs/shared run build && prisma generate --schema=../../prisma/schema.prisma",
    "build": "tsc",
    "migrate:deploy": "prisma migrate deploy --schema=../../prisma/schema.prisma",
    "start": "npm run migrate:deploy && node dist/index.js",
    "lint": "eslint ."
  },
  "dependencies": {
    "@cleexs/shared": "*",
    "@fastify/cors": "^8.4.0",
    "@fastify/helmet": "^11.1.1",
    "@prisma/client": "^5.7.0",
    "fastify": "^4.24.3",
    "nodemailer": "^8.0.1",
    "prisma": "^5.7.0",
    "tsx": "^4.7.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/nodemailer": "^7.0.9",
    "typescript": "^5.3.3"
  }
}
