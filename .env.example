# Database
DATABASE_URL="postgresql://user:password@localhost:5432/cleexs?schema=public"

# NextAuth / Auth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here"

# API
API_URL="http://localhost:3001"
API_PORT=3001

# Logos de marcas (Logo.dev - gratis 5k/día en logo.dev/signup)
# Sin esto se usa Google Favicon cuando hay dominio, o inicial cuando no
NEXT_PUBLIC_LOGO_DEV_TOKEN=""

# Cloudflare Turnstile (captcha en formulario diagnóstico)
# Sin esto el diagnóstico no requiere captcha
NEXT_PUBLIC_TURNSTILE_SITE_KEY=""
TURNSTILE_SECRET_KEY=""

# Redis (para BullMQ)
REDIS_URL="redis://localhost:6379"

# OpenAI (para automatización futura)
OPENAI_API_KEY=""

# Email (diagnóstico público, envío directo)
SMTP_HOST="smtp.example.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER=""
SMTP_PASS=""
SMTP_FROM="noreply@cleexs.com"
# Alternativas: SMTP_FROM_EMAIL (remitente), SMTP_FROM_NAME (nombre del remitente)
FRONTEND_URL="http://localhost:3000"

# Sentry (opcional)
SENTRY_DSN=""
